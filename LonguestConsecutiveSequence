class Solution {
    public int longestConsecutive(int[] nums) {
        HashSet<Integer> set_Consecutive = new HashSet<>();
        int longuestStreak = 0;
        int currentStreak = 1;
        int currentNum =0;
        for(int num : nums)
        {
            set_Consecutive.add(num);
        }

        for(int num : set_Consecutive)
        { //[0,3,2,5,4,6,1]
            if(!set_Consecutive.contains(num-1))
            {
                currentNum = num;
                while(set_Consecutive.contains(currentNum + 1))
                {
                    currentNum++;
                    currentStreak++;
                }
                longuestStreak = Math.max(longuestStreak, currentStreak);
                currentStreak = 1;

            }
        }
        return longuestStreak;


        

        
    }
}
