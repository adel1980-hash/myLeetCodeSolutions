class Solution {
    public int maxArea(int[] heights) {
        
        int left = 0;
        int right = heights.length-1;
        
        int temp = 0;
        
        //si heights[left]> heights[right]

        while(right>left)
        {

        int longueur_x = right-left;
        int hauteur_y = Math.min(heights[left], heights[right]);
        int aire_surface = (longueur_x *hauteur_y);   
        
           
            temp = Math.max(temp,aire_surface);
             if(heights[left]>heights[right])
            {
            right--;
            } 
            else
            {
                left++;
            }

        }
        return temp;
    }
}
