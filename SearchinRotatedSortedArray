class Solution {
    public int search(int[] nums, int target) {
        
        int left = 0;
        int right = nums.length - 1;

        while (left <= right) {
            
            int mid = (left + right) / 2;
            
            if (nums[mid] == target) {
                return mid;
            }

            if (nums[left] <= nums[mid]) {
                if (target >= nums[left] && target < nums[mid]) {
                    right = mid - 1; // On cherche à gauche (on exclut mid)
                } else {
                    left = mid + 1;  // On cherche à droite
                }
            }
            
            // 3. Sinon, c'est la partie DROITE qui est triée
            else {
                // Oui. Est-ce que target est dedans ?
                // (Entre mid exclu et la fin incluse)
                if (target > nums[mid] && target <= nums[right]) {
                    left = mid + 1; // C'est dedans -> On va à droite
                } else {
                    right = mid - 1; // Ce n'est pas dedans -> On va à gauche
                }
            }
        }
        
        return -1;
    }
}
